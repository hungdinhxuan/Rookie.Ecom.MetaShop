        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>First Name<span>*</span></p>
                                    <input type="text" asp-for="CurrentUser.FirstName">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name<span>*</span></p>
                                    <input type="text" asp-for="CurrentUser.LastName">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            <input type="text" asp-for="CurrentUser.Country">
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" placeholder="Street Address" class="checkout__input__add" asp-for="CurrentUser.Line1">
                            <input type="text" placeholder="Apartment, suite, unite ect (optinal)" asp-for="CurrentUser.Line2">
                        </div>
                        <div class="checkout__input">
                            <p>Province<span>*</span></p>
                            <input type="text" asp-for="CurrentUser.Province">
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" asp-for="CurrentUser.PhoneNumber">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" asp-for="CurrentUser.Email">
                                </div>
                            </div>
                        </div>
                        @*<div class="checkout__input__checkbox">
                            <label for="acc">
                            Create an account?
                            <input type="checkbox" id="acc">
                            <span class="checkmark"></span>
                            </label>
                            </div>
                            <p>
                            Create an account by entering the information below. If you are a returning customer
                            please login at the top of the page
                            </p>
                            <div class="checkout__input">
                            <p>Account Password<span>*</span></p>
                            <input type="text">
                            </div>*@
                        @*  <div class="checkout__input__checkbox">
